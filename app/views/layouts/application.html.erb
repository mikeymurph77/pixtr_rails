<!DOCTYPE html>
<html>
<head>
  <title>Pixtr</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<h1><%= link_to "Pixtr", root_path %></h1>
<% if signed_in? %>
	<p>Hello <%= current_user.email %>!</p>
<% end %>

<% if signed_in? %>
	<%= button_to "Sign out", :session, method: :delete %>
	<%= link_to "Create a new group", [:new, :group] %>
<% else %>
	<% unless controller_name == "users" && action_name == "new" %>
		<%= link_to "Sign up", [:new, :user] %>
	<% end %>
	<%= link_to "Sign in", [:new, :session] %>
<% end %>

<%= yield %>

</body>
</html>
